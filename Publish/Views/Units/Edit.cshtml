@model com.dcc.Entities.Unit

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Edit Unit
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit Unit</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <a href="@Url.Action("Index","Units")" class="btn btn-sm btn-success">Units List</a>
                    </div>
                    @using (Html.BeginForm("Edit", "Units", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", role = "form" }))
                    {
                        <div class="box-body">
                            <div class="col-md-6 col-md-offset-3">
                                @Html.HiddenFor(model => model.UnitId)
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="control-label col-md-2">Unit Name</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UnitName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.UnitName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Unit Function</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UnitFunction, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.UnitFunction, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Unit Shortcode</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UnitShortCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UnitShortCode, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Department</label>
                                    <div class="col-md-10">
                                        <select required class="form-control" name="DeptID">
                                            @foreach (var dept in ViewBag.Dept)
                                            {
                                                <option @(Model.DeptID == dept.DeptId ? "selected='selected'" : "") value="@dept.DeptId">@dept.DeptName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="col-md-4 col-md-offset-4">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>