@model com.dcc.Entities.Believer
<div class="container">
    <div class="col-md-12">
        <form action="@Url.Action("ProcessCreateLoginCredBelievers", "Users")" id="CreatLoginCred" class="col-md-10">
            
            <div class="form-group col-md-6 col-md-offset-1">
                <label for="email" class="control-label">Name:</label>
                <p class="form-control-static text-bold text-uppercase">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</p>
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-md-6 col-md-offset-1">
                <label for="UserName" class="control-label">User Name:</label>
                <input type="text" required class="form-control" id="UserName" placeholder="Enter Username" name="UserName">
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-md-6 col-md-offset-1">
                <label for="pwd" class="control-label">Password:</label>
                <input type="password" required class="form-control" id="Password" placeholder="Enter password" name="Password">
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-md-6 col-md-offset-1">
                <label for="" class="control-label">Select Role:</label>
                <select required name="RoleId" id="RoleId" class="form-control">
                    <option></option>
                    @foreach (var item in ViewBag.Roles)
                    {
                        <option value="@item.RoleId">@item.Role_Name</option>
                    }
                </select>         
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-md-6 col-md-offset-1">
                <label for="" class="control-label">Department:</label>
                <p class="form-control-static text-info text-uppercase">@ViewBag.DeptDetails.DeptName</p>
                <input type="hidden" value="@ViewBag.DeptDetails.DeptId" name="DeptId" />
                <input type="hidden" value="@ViewBag.MemberId" name="BelieverId" />
            </div>
            

            <div class="form-group col-md-6 col-md-offset-3">
                <button type="button" onclick="CreateLoginCredentials()" class="btn btn-default">Submit</button>
            </div>
            
        </form>
    </div>
</div>
