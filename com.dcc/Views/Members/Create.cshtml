@model com.dcc.Entities.Member

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Add New Member
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Add Member</li>
                </ol>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <a href="@Url.Action("Index","Members")" class="btn btn-sm btn-success">Members List</a>
                            </div>
                            @using (Html.BeginForm("Create", "Members", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", role = "form" }))
                    {
                                <div class="box-body">
                                    <div class="col-md-6 col-md-offset-3">
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.BelieverId, new { @Value = @ViewBag.Believer.MemberId })
                                        <div class="form-group">
                                            <label class="control-label col-md-2">Believer</label>
                                            <div class="col-md-10">
                                                <p class="form-control-static text-bold text-uppercase text-info">@ViewBag.Believer.FirstName @ViewBag.Believer.LastName </p>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-2">Select Department</label>
                                            <div class="col-md-10">
                                                <select required name="DeptId" id="DeptId" class="form-control">
                                                    <option></option>
                                                    @foreach (var item in ViewBag.dept)
                                            {
                                                        <option value="@item.DeptId">@item.DeptName</option>
                                            }
                                                </select>

                                            </div>
                                            <div class="clearfix"></div>
                                        </div>

                                       
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Groups, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.Groups,"A" ,new {  @class = "form-control", @Value = "A", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.Groups, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>

                                       
                                        @if (@ViewBag.Error != null)
                                        {
                                            <div class="form-group">
                                                <p class="form-control-static text-danger text-uppercase">
                                                    @ViewBag.Error
                                                </p>
                                            </div>
                                        }
                                        <div class="col-md-4 col-md-offset-4">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </div>
                    }
                        </div>
                    </div>
                </div>
            </section>
        </div>
