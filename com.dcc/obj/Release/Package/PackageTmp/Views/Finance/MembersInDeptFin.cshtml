
@{
    ViewBag.Title = "MembersInDeptFin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<com.dcc.Entities.Believer>

@{
    ViewBag.Title = "MembersInDept";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Payment Transaction for Members in @ViewBag.Dept.DeptName
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Finance")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Payment Transactio</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">Select a memeber to carry out transaction</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Gender
                                    </th>
                                    
                                    <th>
                                        Phone Number
                                    </th>
                                    <td>&nbsp;</td>
                                </tr>
                            </thead>
                            <tbody id="users">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sex)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("DuesEntry", "Finance", new { MemberId = item.MemberId})" class="btn btn-sm btn-primary"><i class="fa fa-eye"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


