@model IEnumerable<com.dcc.Entities.Unit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Units
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Units</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("Create New", "Create")</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Unit Name
                                    </th>
                                    <th>
                                        Unit ShortCode
                                    </th>
                                    <th>
                                        Department
                                    </th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitShortCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Department.DeptName)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Units", new { id = item.UnitId })" class="btn btn-sm btn-primary"><i class="fa fa-eye"></i></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Units", new { id = item.UnitId })" class="btn btn-sm btn-success"><i class="fa fa-edit"></i></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete", "Units", new { id = item.UnitId })" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/plugins/datatables/dataTables.bootstrap.js")"></script>
    <script>
        $(function () {
            $('#table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
}

