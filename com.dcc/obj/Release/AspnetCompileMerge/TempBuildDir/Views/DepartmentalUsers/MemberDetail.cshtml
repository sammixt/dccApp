@model com.dcc.Entities.Believer

@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Member's Details
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Members</a></li>
            <li class="active">Member Details</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">@Model.FirstName @Model.LastName</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">First name</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.FirstName)</span>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Last name</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.LastName)</span>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Sex</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.Sex)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Date of Birth</label><br />
                                <span class="text-bold"> @Model.DateOfBirth.Value.ToShortDateString()</span>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Phone Number</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.PhoneNumber)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Home Address One</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.HomeAddressOne)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Home Address Two</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.HomeAddressTwo)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">City</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.City)</span>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">State</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.StateName)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label text-info" })<br />
                                <span class="text-bold">@Html.DisplayFor(model => model.Country)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Marital Status</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.MaritalStatus)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Wedding Annivarsary</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.WeddingAnniversary)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Facebook Name</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.FacebookName)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.InstagramHandle, htmlAttributes: new { @class = "control-label text-info" })<br />
                                <span class="text-bold">@Html.DisplayFor(model => model.InstagramHandle)</span>
                            </div>
                        </div>

                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Twitter Handle</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.TwitterHandle)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                <label class="control-label text-info">Alternate Phone Number</label><br />
                                <span class="text-bold">@Html.DisplayFor(model => model.AltPhoneNumber)</span>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-info" })<br />
                                <span class="text-bold">@Html.DisplayFor(model => model.Email)</span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    @if (ViewBag.DeptDetails != null)
                    {
                        <div class="box-body ">
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped table-responsive">
                                    <thead>
                                        <tr>
                                            <th class="text-info">Department</th>
                                            <th class="text-info">Unit</th>
                                            <th class="text-info">Group</th>
                                            <th class="text-info">Status</th>
                                            <th class="text-info">Probation Status</th>
                                            <th class="text-info">Post</th>
                                            <th>&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.DeptDetails)
                                        {
                                            <tr>
                                                <td><span class="text-bold text-uppercase">@item.Department.DeptName</span></td>
                                                <td><span class="text-bold">@(item.Unit != null ? item.Unit.UnitName : "")</span></td>
                                                <td><span class="text-bold">@item.Groups</span></td>
                                                <td><span class="text-bold">@item.Status</span></td>
                                                <td><span class="text-bold">@item.ProbationStatus</span></td>
                                                <td><span class="text-bold">@(item.Post1 != null?item.Post1.PostName:"")</span></td>
                                                <th><a class="btn btn-sm btn-danger" onclick="delMemberFromUnit(@item.MemberId)">Remove</a></th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    }
                    <div class="box-footer">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="col-md-4 col-md-offset-4">
                                

                                <div class="col-md-3 pull-left">
                                    <a href="@Url.Action("MembersInDept", "DepartmentalUsers")" class="btn btn-md btn-success">Back to List</a>
                                </div>
                                <div class="col-md-3 pull-right">
                                    <a href="@Url.Action("AssignToUnit", "DepartmentalUsers", new { BelieverId = Model.MemberId })" class="btn btn-md btn-primary">Assign to Unit</a>
                                </div>
                            </div>
                           <div class="clearfix"></div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/BasicFunction.js"></script>

