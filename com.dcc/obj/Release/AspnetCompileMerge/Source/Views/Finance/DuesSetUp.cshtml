@model IEnumerable<com.dcc.Entities.Due>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Payments Setups
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Payments Setups</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("Create New", "Create")</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Payment Name
                                    </th>
                                    <th>
                                        Payment Description
                                    </th>
                                    <th>
                                        Payment Type
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DuesName)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.DuesDesc)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.DuesType)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Amount)
                                            </td>

                                            <td>
                                                @item.CreationDate.Date.ToShortDateString()
                                            </td>


                                            <td>
                                                <a href="@Url.Action("Edit", "Finance", new { id = item.DuesId })" class="btn btn-sm btn-primary" title="Edit"><i class="fa fa-edit"></i></a>
                                            </td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-sm btn-success" title="Delete" onclick="delDues(@item.DuesId)" ><i class="fa fa-trash"></i></a>
                                            </td>


                                        </tr>
                                    }
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/plugins/datatables/dataTables.bootstrap.js")"></script>
    <script>
        $(function () {
            $('#table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
<script src="~/Scripts/BasicFunction.js"></script>
}
