@model com.dcc.Entities.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Department Details
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit Department</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <a href="@Url.Action("Index","Departments")" class="btn btn-sm btn-success">Department List</a>
                    </div>
                    
                        <div class="box-body">
                            <div class="col-md-6 col-md-offset-3">
                                
                                <div class="form-group">
                                    <label class="control-label col-md-2">Department Name</label>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.DeptName)
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Department Description</label>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.DeptDesc)
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Department's Vision</label>
                                    <div class="col-md-10">
                                       @Html.DisplayFor(model => model.Vision)
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Department Short Code</label>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => model.ShortCode)
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                </div>
            </div>
        </div>
    </div>
            </div>
    </section>
</div>
